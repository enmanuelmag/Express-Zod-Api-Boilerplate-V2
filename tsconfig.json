{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": true,
    /* Strict Type-Checking Options */
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    /* Additional Checks */
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    /* Module Resolution Options */
    "moduleResolution": "node",
    "sourceMap": true,
    /* Advanced Options */
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./src",
    "paths": {
      "@/*": [
        "*"
      ]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}